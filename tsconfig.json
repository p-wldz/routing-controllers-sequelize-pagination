{
    "compilerOptions": {
      "resolveJsonModule": true,
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "ES2017",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
        "*": [
          "node_modules/*",
          "src/types/*"
        ]
      },
      "lib": [
        "es2017"
      ],
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "skipLibCheck": true,
      "allowJs": true
    },
    "include": [
      "src/**/*"
    ],
    "experimentalDecorators": true
  }